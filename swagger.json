---
swagger: '2.0'

################################################################################
#                              API Information                                 #
################################################################################
info:
  version: "1.0"
  title: API moviesApi - Api pour la formation AngularJSClient
  contact:
    name: Jean-Alain Ré
  
# during dev, should point to your local machine
host: 127.0.0.1:3002
# basePath prefixes all resource paths
basePath: /
#
schemes:
  # tip: remove http to make production-grade
  - http
# format of bodies a client can send (Content-Type)
consumes:
  - application/json
# format of the responses to the client (Accepts)
produces:
  - application/json

paths:
  /movies:
    get:
      description: Service fournissant la liste des films
      responses: 
        '200':
          description: Réception du message en succès
          schema: 
            type: array 
            items: 
              $ref: '#/definitions/movie'
      parameters:
        - name: category
          in: query
          type: string
          description: Filtre les films par catégorie
          required: false
  /movie:
    post:
        description: Service d'acquisition d'un film
        responses:
          201:
            description: Ajout du film réussi.
          400: 
            description: Echec de l'ajout titre en doublon
        parameters:
          - name: movie
            description: Message transmis par l'objet connecté.
            in: body
            required: true
            schema:
              $ref: '#/definitions/movie'
  '/movie/{id}':
    delete:
      description: Service supprimant un film
      responses:
        '200':
          description: Modification réussie
        '304': 
          description: pas de film à modifier
      parameters: 
        - name: id
          type: number
          format: int32
          description: Identifiant du film à supprimer
          in: path
          required: true
    put: 
      description: Service modifiant un film
      responses:
        200:
          description: Suppression réussie
        304: 
          description: pas de film à supprimer
      parameters: 
        - name: id
          description: Identifiant du film à supprimer
          in: path
          type: number
          format: int32
          required: true
    

definitions:
  movie:
    type: object
    properties:
      id:
        type: integer
        format: int32
        description: identifiant du film
      title:
        type: string
        description: Titre du film
      category:
        type: string
        description: Cét&égorie du film
      releaseYear:
        type: integer
        format: int32
        description: Année de sortie du film
      poster:
        type: string
        description: Nom du fichier du film
      directors:
        type: string
        description: Réalisateurs du film. séparés par des ','
      actors:
        type: string
        description: Acteurs du film. séparés par des ','
      synopsis:
        type: string
        description: Description du film
      rate:
        type: integer
        format: int32
        description: Description du film
      lastViewDate:
        type: string
        format: date-time
        description: date de dernière visualisation
      price:
        type: number
        format: float
        description: Prix dyu film